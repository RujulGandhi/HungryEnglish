<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_rect"
        android:elevation="@dimen/_5sdp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/filter"
            android:textColor="@color/white"
            android:textSize="@dimen/_20sdp" />


        <EditText
            android:id="@+id/skill_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:hint="@string/special_skils"
            android:padding="@dimen/_16sdp"
            android:textColor="@color/black"
            android:textSize="@dimen/_14sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:weightSum="7">

            <TextView
                android:id="@+id/day_mon"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Mon"
                android:text="M" />

            <TextView
                android:id="@+id/day_tue"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Tue"
                android:text="T" />

            <TextView
                android:id="@+id/day_wen"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Wed"
                android:text="W" />

            <TextView
                android:id="@+id/day_thu"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Thu"
                android:text="T" />

            <TextView
                android:id="@+id/day_fri"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Fri"
                android:text="F" />

            <TextView
                android:id="@+id/day_sat"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Sat"
                android:text="S" />

            <TextView
                android:id="@+id/day_sun"
                style="@style/weekStyle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:maxLength="1"
                android:onClick="onSelect"
                android:tag="Sun"
                android:text="S" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginStart="@dimen/_10sdp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/cancel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/green_corner"
                android:gravity="center"
                android:onClick="onClearFilter"
                android:padding="@dimen/_10sdp"
                android:text="@string/clear"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

            <TextView
                android:id="@+id/okay"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:layout_weight="1"
                android:background="@drawable/green_corner"
                android:gravity="center"
                android:onClick="onSubmitFilter"
                android:padding="@dimen/_10sdp"
                android:text="@string/submit_en"
                android:textColor="@color/white"
                android:textSize="@dimen/_14sdp" />

        </LinearLayout>

    </LinearLayout>
</layout>