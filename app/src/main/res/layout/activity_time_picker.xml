<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="10dp"
        android:gravity="center"
        android:weightSum="7">

        <TextView
            android:id="@+id/day_mon"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Monday"
            android:text="M" />

        <TextView
            android:id="@+id/day_tue"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Tuesday"
            android:text="T" />

        <TextView
            android:id="@+id/day_wen"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Wensday"
            android:text="W" />

        <TextView
            android:id="@+id/day_thu"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Thursday"
            android:text="T" />

        <TextView
            android:id="@+id/day_fri"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Friday"
            android:text="F" />

        <TextView
            android:id="@+id/day_sat"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Saturday"
            android:text="S" />

        <TextView
            android:id="@+id/day_sun"
            style="@style/weekStyle"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:maxLength="1"
            android:onClick="onSelect"
            android:tag="Sunday"
            android:text="S" />

    </LinearLayout>

    <TextView
        android:id="@+id/textview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:onClick="submit"
        android:text="Submit" />

</LinearLayout>