<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"></style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="inputtext_edittext">
        <item name="android:textColorHint">@color/colorAccent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="StyledTilEditTextTheme">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:imeOptions">actionNext</item>
        <item name="android:singleLine">true</item>
        <item name="colorControlNormal">@color/black</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="android:textColorPrimary">@color/colorPrimaryDark</item>
    </style>

    <style name="rating_bar">
        <item name="rb_empty">@mipmap/unfill_rate</item>
        <item name="rb_fill">@mipmap/fill_rate</item>
        <item name="rb_max_count">5</item>
    </style>


    <style name="title_textview">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="regular_textview">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_16sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="small_textview">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:layout_margin">@dimen/_10sdp</item>
        <item name="android:textSize">@dimen/_12sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="green_btn">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@drawable/selector_green</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/green_corner</item>
        <item name="android:textAllCaps">false</item>
    </style>


    <style name="gray_btn">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@drawable/selector_gray</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/gray_corner</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="green_rectangle">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textColor">@drawable/selector_green</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:background">@drawable/green_text_selector</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="weekStyle">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:background">@drawable/circle_view</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:layout_margin">3dp</item>
        <item name="android:textColor">@drawable/selector_week</item>
    </style>

    <style name="TimePickerTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/colorPrimary</item>
    </style>

    <style name="heading_textview">
        <item name="android:fontFamily">@font/allerta</item>
        <item name="android:textSize">@dimen/_22sdp</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
